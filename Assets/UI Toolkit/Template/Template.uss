.template-hide {
    display: none;
    opacity: 0;
}

.template-extend {
    background-color: rgb(0, 180, 255);
    margin-top: 5px;
    margin-right: 5px;
    margin-bottom: 5px;
    margin-left: 5px;
    padding-top: 0;
    padding-right: 0;
    padding-bottom: 0;
    padding-left: 0;
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    height: 40px;
    color: rgb(255, 255, 255);
    font-size: 18px;
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
    border-bottom-left-radius: 3px;
    transition-duration: 0.2s;
    -unity-text-align: middle-center;
}

.template-extend:hover {
    height: 60px;
}


.template-title {
    color: rgb(255, 255, 255);
    font-size: 36px;
    -unity-text-align: middle-center;
    padding-top: 0;
    padding-right: 0;
    padding-bottom: 0;
    padding-left: 0;
    margin-top: 0;
    margin-right: 0;
    margin-bottom: 0;
    margin-left: 0;
    transition-duration: 0.2s;
}

.template-title-s {
    color: rgb(0, 220, 255);
}

.template-title:hover {
    scale: 1.1 1.1;
}

.turret-card-bg {
    width: 160px;
    height: 160px;
    background-color: rgb(26, 26, 26);
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    border-bottom-left-radius: 5px;
    transition-duration: 0.2s;
}

.turret-card-bg-s {
    border-top-width: 2px;
    border-right-width: 2px;
    border-bottom-width: 2px;
    border-left-width: 2px;
    border-left-color: rgb(75, 207, 255);
    border-right-color: rgb(75, 207, 255);
    border-top-color: rgb(75, 207, 255);
    border-bottom-color: rgb(75, 207, 255);
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    border-bottom-left-radius: 5px;
}

.turret-card-bg:hover {
    scale: 1.1 1.1;
}
