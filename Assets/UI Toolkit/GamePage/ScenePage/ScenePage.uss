.scenepage-card {
    transition-duration: 0.2s;
}

.scenepage-card-s {
    border-top-width: 2px;
    border-right-width: 2px;
    border-bottom-width: 2px;
    border-left-width: 2px;
    border-left-color: rgb(0, 180, 255);
    border-right-color: rgb(0, 180, 255);
    border-top-color: rgb(0, 180, 255);
    border-bottom-color: rgb(0, 180, 255);
}

.scenepage-card:hover {
    scale: 1.05 1.05;
}